{
    "author" : "QylinFly",
    "language" : "zh-hans",
    "gitbook": "3.2.3",
    "styles": {
        "website": "styles/website.css",
        "ebook": "styles/ebook.css",
        "pdf": "styles/pdf.css",
        "mobi": "styles/mobi.css",
        "epub": "styles/epub.css"
     },
    "plugins": [
        "editlink",
        "mermaid",
        "-sharing",
        "github",
        "disqus",
        "-search",
        "search-pro",
        "multipart",
        "splitter",
        "tbfed-pagefooter",
        "toggle-chapters",
        "donate",
        "versions-select",
        "simple-page-toc",
        "terminal",
        "toc",
        "image-captions"
    ],
    "pluginsConfig": {
     "theme-default": {
        "showLevel": true
    },
    "editlink": {
        "base": "https://github.com/QylinFly/docker",
        "label": "Edit This Page",
        "multilingual": false
    },
    "github": {
        "url": "https://github.com/QylinFly"
    },
    "disqus": {
        "shortName": "Docker"
    },
    "search-pro": {
        "cutWordLib": "nodejieba",
        "defineWord" : ["Gitbook Use"]
    },
    "tbfed-pagefooter": {
        "copyright":"Copyright &copy I-Vectors.com 2017",
        "modify_label": "该文件修订时间：",
        "modify_format": "YYYY-MM-DD HH:mm:ss"
    },
    "donate": {
        "wechat": "/assets/wechatpay.jpeg",
        "alipay": "/assets/alipay.jpeg",
        "title": "",
        "button": "赏",
        "alipayText": "支付宝打赏",
        "wechatText": "微信打赏"
    },
    "versions": {
        "options": [
            {
                "value": "",
                "text": "v1.0"
            }
        ]
    },
    "simple-page-toc": {
        "maxDepth": 3,
        "skipFirstH1": true
    },
    "terminal": {
        "copyButtons": true,
        "fade": false,
        "style": "flat"
    },
    "toc": {
        "addClass": true,
        "className": "toc"
   },
   "image-captions": {
      "attributes": { "width": "300" },
      "align": "center",
      "caption": "Image - _CAPTION_"
   }
    
  }
}