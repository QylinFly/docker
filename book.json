        "pdf": "styles/pdf.css",
        "mobi": "styles/mobi.css",
        "epub": "styles/epub.css"
     },
    "plugins": [
    "editlink",
    "mermaid",
    "-sharing",
    "github",
    "disqus",
    "-search",
    "search-pro",
     "splitter",
     "tbfed-pagefooter",
     "toggle-chapters",
     "donate",
     "versions-select",
     "simple-page-toc"
    ],
    "pluginsConfig": {
      "editlink": {
        "base": "https://github.com/QylinFly/docker",
        "label": "Edit This Page",
        "multilingual": false
      },
      "github": {
        "url": "https://github.com/QylinFly"
      },
      "disqus": {
        "shortName": "gitbookuse"
      },
      "search-pro": {
        "cutWordLib": "nodejieba",
        "defineWord" : ["Gitbook Use"]
    },
    "tbfed-pagefooter": {
        "copyright":"Copyright &copy i-vectors.com 2015",
        "modify_label": "该文件修订时间：",
        "modify_format": "YYYY-MM-DD HH:mm:ss"
    },
    "donate": {
            "wechat": "https://zhangjikai.com/resource/weixin.png",
            "alipay": "https://zhangjikai.com/resource/alipay.png",
            "title": "",
            "button": "赏",
            "alipayText": "支付宝打赏",
            "wechatText": "微信打赏"
    },
    "versions": {
            "options": [
                {
                    "value": "http://gitbook.zhangjikai.com",
                    "text": "v3.2.3"
                },
                {
                    "value": "http://gitbook.zhangjikai.com/v2/",
                    "text": "v2.6.4"
                }
            ]
